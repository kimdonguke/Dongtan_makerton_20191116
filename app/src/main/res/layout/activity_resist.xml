<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ResistActivity">
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintLeft_toLeftOf="@+id/resist_img"
        app:layout_constraintTop_toBottomOf="@+id/resist_img"
        android:text="이름을 입력하세요"
        android:layout_marginTop="10dp"
        android:id="@+id/justname"
        android:textColor="#111"
        />
    <!--이름-->
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintLeft_toLeftOf="@+id/resist_img"
        app:layout_constraintTop_toBottomOf="@+id/res_nametxt"
        android:layout_marginTop="10dp"
        android:text="생년 월 일을 입력하세요"
        android:textColor="#111"
        android:id="@+id/justyear"
        />
    <!--생년 월 일-->
    <ImageView
        android:layout_width="280dp"
        android:layout_height="280dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginTop="80dp"
        android:id="@+id/resist_img"
        android:src="@drawable/profileicon"
        />
    <!--프로필 사진-->
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintLeft_toLeftOf="@+id/resist_img"
        app:layout_constraintTop_toBottomOf="@+id/res_yeartxt"
        android:layout_marginTop="10dp"
        android:text="사는 곳을 입력해주세요"
        android:id="@+id/justlocate"
        android:textColor="#111"
        />
    <!--사는 곳-->
    <EditText
        android:layout_width="280dp"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@+id/justname"
        app:layout_constraintLeft_toLeftOf="@+id/justname"
        android:id="@+id/res_nametxt"

        />
    <EditText
        android:layout_width="280dp"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@+id/justyear"
        app:layout_constraintLeft_toLeftOf="@+id/justyear"
        android:id="@+id/res_yeartxt"
        />
    <EditText
        android:layout_width="210dp"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@+id/justlocate"
        app:layout_constraintLeft_toLeftOf="@+id/justlocate"
        android:id="@+id/res_locate"
        />
    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="가입 완료"
        app:layout_constraintRight_toRightOf="@+id/res_yeartxt"
        app:layout_constraintTop_toBottomOf="@+id/res_locate"
        android:layout_marginTop="20dp"
        android:letterSpacing="0.2"
        android:lineSpacingExtra="3.3sp"
        android:id="@+id/res_btn"
        />
    <Button
        android:layout_width="70dp"
        android:layout_height="wrap_content"
        android:text="위치"
        app:layout_constraintTop_toBottomOf="@+id/justlocate"
        app:layout_constraintLeft_toRightOf="@+id/res_locate"
        android:id="@+id/res_btnlocate"
        />


</androidx.constraintlayout.widget.ConstraintLayout>